<div class="container">
  <div class="mail-box">
    <aside class="sm-side">
      <div class="user-head">
      </div>
      <div class="inbox-body">
        <a href="#myModal" title="Compose" {{ action (route-action "toggleCompose") }}class="btn btn-compose">
          Compose
        </a>
      </div>
      <ul class="inbox-nav inbox-divider">
      {{#nav-item path='inbox' icon='inbox'}}
        Inbox {{#if inboxCount}}<span class="label label-success pull-right">{{inboxCount}}</span>{{/if}}
      {{/nav-item}}
      {{#nav-item path='sent' icon='envelope'}}
        Sent {{#if sentCount}}<span class="label label-info pull-right">{{sentCount}}</span>{{/if}}
      {{/nav-item}}
      {{#nav-item path='trash' icon='trash'}}
        Trash {{#if trashCount}}<span class="label label-danger pull-right">{{trashCount}}</span>{{/if}}
      {{/nav-item}}
      {{#nav-item path='starred' icon='star'}}
        Starred {{#if starredCount}}<span class="label label-warning pull-right">{{starredCount}}</span>{{/if}}
      {{/nav-item}}
      </ul>
    </aside>
    <aside class="lg-side">
      <div class="inbox-head">
        <h3>Mail</h3>
      </div>
      <div class="inbox-body">
        {{outlet}}
      </div>
    </aside>
  </div>
</div>